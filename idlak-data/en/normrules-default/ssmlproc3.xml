<nrules>

  <rules>

    <rule name="prosody_range_x-low">
      <comment>
	        Handles one of the prosody:pitch ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="range" val="x-low" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig f0range="0.8"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_range_low">
      <comment>
	        Handles one of the prosody:pitch ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="range" val="low" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig f0range="0.9"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_range_med">
      <comment>
	        Handles one of the prosody:pitch ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="range" val="medium" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig f0range="1.0"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_range_def">
      <comment>
	        Handles one of the prosody:pitch ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="range" val="default" offset="0"/>
