<nrules>

  <rules>

    <rule name="us_social_security_num">
      <comment>
      E.g. 157-26-5734
    </comment>
      <match>
        <rgx id="m0" name="tele_digits_3_4" src="lcase" offset="0"/>
        <rgx id="m1" name="is_hyphen" src="lcase" offset="1"/>
        <rgx id="m2" name="digits_2" src="lcase" offset="2"/>
        <rgx id="m3" name="is_hyphen" src="lcase" offset="3"/>
        <rgx id="m4" name="tele_digits_3_4" src="lcase" offset="4"/>
      </match>
      <replace>
        <fnc name="asdigits" from="m0" grp="0" offset="0"/>
        <cpy val="" offset="1"/>
        <fnc name="asdigits" from="m2" grp="0" offset="2"/>
        <cpy val="" offset="3"/>
        <fnc name="asdigits" from="m4" grp="0" offset="4"/>
      </replace>
    </rule>

    <rule name="us_social_security_num_b">
      <comment>
      E.g. 157 26 5734
    </comment>
      <match>
        <rgx id="m0" name="tele_digits_3_4" src="lcase" offset="0"/>
        <rgx id="m1" name="digits_2" src="lcase" offset="1"/>
        <rgx id="m2" name="tele_digits_3_4" src="lcase" offset="2"/>
      </match>
      <replace>
        <fnc name="asdigits" from="m0" grp="0" offset="0"/>
        <fnc name="asdigits" from="m1" grp="0" offset="1"/>
        <fnc name="asdigits" from="m2" grp="0" offset="2"/>
      </replace>
    </rule>

    <rule name="per_hour">
      <comment>
      E.g. $5.15/hr (currency is handled elsewhere)
    </comment>
      <match>
        <rgx id="m0" name="slash" src="lcase" offset="0"/>
        <rgx id="m1" name="per_hour" src="lcase" offset="1"/>
      </match>
      <replace>
        <cpy val="per" offset="0"/>
        <cpy val="hour" offset="1"/>
      </replace>
    </rule>
  </rules>
</nrules>
