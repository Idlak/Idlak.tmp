    <rule name="emotion_cross">
      <comment>
	        Convert emphasis tag, i.e. "<!-- <emphasis level="reduced">and</emphasis> ->
     <emphasis level="reduced"><lex entry="reduced"><sig amplitude="0.8">and</sig></lex> -->
	    </comment>
      <match>
        <xml id="m0" name="voice" attribute="emotion" val="cross" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <usel genre="stressed"/>
        </cpy>
        <cpy offset="0">
          <sig amplitude="1.5"/>
        </cpy>
        <cpy offset="0">
          <sig rate="0.95"/>
        </cpy>
        <cpy offset="0">
          <sig f0="+0"/>
        </cpy>
      </replace>
    </rule>

