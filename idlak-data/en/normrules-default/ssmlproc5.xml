<nrules>

  <rules>

    <rule name="prosody_volume_silent">
      <comment>
	        Handles one of the prosody:volume ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="volume" val="silent" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig amplitude="0.0"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_volume_x-soft">
      <comment>
	        Handles one of the prosody:volume ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="volume" val="x-soft" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig amplitude="0.5"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_volume_soft">
      <comment>
	        Handles one of the prosody:volume ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="volume" val="soft" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig amplitude="0.75"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_volume_med">
      <comment>
	        Handles one of the prosody:volume ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="volume" val="medium" offset="0"/>
      </match>
