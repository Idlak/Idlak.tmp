        </cpy>
      </replace>
    </rule>

    <rule name="prosody_pitch_x-high">
      <comment>
	        Handles one of the prosody:pitch ssml tag
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="pitch" val="x-high" offset="0"/>
      </match>
      <replace>
        <cpy offset="0">
          <sig f0="1.2"/>
        </cpy>
      </replace>
    </rule>

    <rule name="prosody_pitch_MAP">
      <comment>
	        Handles the emphasis:map ssml tag.
	    </comment>
      <match>
        <xml id="m0" name="prosody" attribute="pitch" offset="0"/>
      </match>
      <replace>
        <xml maptag="prosody" totag="sig" mapatt="f0" toatt="pitch" from="m0" offset="0"/>
      </replace>
    </rule>
  </rules>
</nrules>
