<nrules>

  <rules>

    <rule name="currency_scale_range_full">
      <comment>
      £12m-£15m - &gt; twelve to fifteen million pounds
    </comment>
      <match>
        <rgx id="m0" name="currency_symb" src="lcase" offset="-1"/>
        <rgx id="m1" name="integer_currency_scale" src="lcase" offset="0"/>
        <rgx id="m2" name="hyphen" src="lcase" offset="1"/>
        <rgx id="m3" name="currency_symb" src="lcase" offset="2"/>
        <rgx id="m4" name="integer_currency_scale" src="lcase" offset="3"/>
      </match>
      <replace>
        <fnc name="number" from="m1" grp="1" offset="-1"/>
        <lkp name="currency_scale" from="m1" grp="2" offset="0"/>
        <lkp name="currency_compl" from="m1" grp="0" offset="0"/>
        <lkp name="currency_pl" from="m0" grp="0" offset="0"/>
        <cpy val="to" offset="1"/>
        <fnc name="number" from="m4" grp="1" offset="2"/>
        <lkp name="currency_scale" from="m4" grp="2" offset="2"/>
        <lkp name="currency_compl" from="m1" grp="0" offset="2"/>
        <lkp name="currency_pl" from="m3" grp="0" offset="3"/>
      </replace>
    </rule>

    <rule name="currency_scale_range_no_space_1">
      <comment>
      £12-£15m - &gt; twelve to fifteen million pounds
    </comment>
      <match>
        <rgx id="m0" name="currency_symb" src="lcase" offset="-1"/>
        <rgx id="m1" name="integer_currency" src="lcase" offset="0"/>
        <rgx id="m2" name="hyphen" src="lcase" offset="1"/>
        <rgx id="m3" name="currency_symb" src="lcase" offset="2"/>
        <rgx id="m4" name="integer_currency_scale" src="lcase" offset="3"/>
      </match>
      <replace>
        <fnc name="number" from="m1" grp="1" offset="-1"/>
        <cpy val="to" offset="-1"/>
        <fnc name="number" from="m4" grp="1" offset="0"/>
        <lkp name="currency_scale" from="m4" grp="2" offset="1"/>
        <lkp name="currency_compl" from="m1" grp="0" offset="2"/>
        <lkp name="currency_pl" from="m0" grp="0" offset="3"/>
      </replace>
    </rule>

    <rule name="number_currency_1_with_symbol_plusminus">
      <comment>
      Dummy rule
    </comment>
      <match>
        <rgx id="m0" name="dummy" src="lcase" offset="0"/>
      </match>
      <replace>
        <cpy from="m0" grp="0" offset="0"/>
      </replace>
    </rule>

    <rule name="number_currency_with_symbol_plusminus">
      <comment>
      Dummy rule
    </comment>
      <match>
        <rgx id="m0" name="dummy" src="lcase" offset="0"/>
      </match>
      <replace>
        <cpy from="m0" grp="0" offset="0"/>
      </replace>
    </rule>

    <rule name="number_currency_1_with_symbol">
      <comment>
      Dummy rule
    </comment>
      <match>
        <rgx id="m0" name="dummy" src="lcase" offset="0"/>
      </match>
      <replace>
        <cpy from="m0" grp="0" offset="0"/>
      </replace>
    </rule>

    <rule name="number_currency_with_symbol">
      <comment>
      Dummy rule
    </comment>
      <match>
        <rgx id="m0" name="dummy" src="lcase" offset="0"/>
      </match>
      <replace>
        <cpy from="m0" grp="0" offset="0"/>
      </replace>
    </rule>

    <rule name="remove_currency_signs">
      <comment>
      Preprocess +/- followed by a currency symbol
      -£12 million - &gt; minus £12 million
    </comment>
      <match>
        <rgx id="m0" name="plusminus" src="lcase" offset="0"/>
        <rgx id="m1" name="currency_symb_only" src="lcase" offset="1"/>
      </match>
      <replace>
        <lkp name="plusminus" from="m0" offset="0"/>
      </replace>
    </rule>

    <rule name="remove_hyphen_scale">
      <comment>
      Preprocess +/- followed by a currency symbol
      -£12 million - &gt; minus £12 million
    </comment>
      <match>
        <rgx id="m0" name="number_currency" src="lcase" offset="-1"/>
        <rgx id="m1" name="is_hyphen" src="lcase" offset="0"/>
        <rgx id="m2" name="currency_scale" src="lcase" offset="1"/>
      </match>
      <replace>
        <cpy from="m2" offset="0"/>
        <cpy val="" offset="1"/>
      </replace>
    </rule>
  </rules>
</nrules>
