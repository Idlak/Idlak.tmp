<nrules>

  <rules>

    <rule name="handle_signs">
      <comment>
            Translate all signs which are left over at this stage.
        </comment>
      <match>
        <rgx id="m0" name="signs" src="lcase" offset="0"/>
      </match>
      <replace>
        <lkp name="plusminus" from="m0" offset="0"/>
      </replace>
    </rule>
  </rules>
</nrules>
